<aura:component controller="JazzHRFetchDeletedApplicantController" 
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="applicantRecord" type="Object"/>
    <aura:attribute name="recordId" type="String"/>
    <lightning:card variant="Narrow" title="Fetch Deleted Applicant" iconName="standard:outcome" >
        <ui:message title="Important Information" severity="info" closable="false">
            <p style="float:left;">Below option should be used in case incorrect Applicants are deleted by mistake while merging duplicate Applicants.</p>
        </ui:message> 
        
        <aura:set attribute="footer">
            <force:recordData aura:id="recordLoaderId"
                              layoutType="FULL"
                              recordId="{!v.recordId}"
                              targetFields="{!v.applicantRecord}"
                              mode="VIEW"
                              />
            
            <p style="float:left; margin-top:10px;">Enter Deleted JazzHR Applicant ID</p>
            <ui:inputText class="field" value="" aura:id="inputTextBoxID" required="true"/>   
           
            <lightning:button variant="brand" label="Fetch Applicant" title="Brand action" onclick="{!c.onClickFetchApplicantButton}" class="marginTop"/>
        </aura:set>
    </lightning:card>
</aura:component>